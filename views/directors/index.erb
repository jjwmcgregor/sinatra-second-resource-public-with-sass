<h1>Index Page</h1>

<table class="table">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Date of Birth</th>
    <th>Nationality</th>
    <th>Movies</th>
  </thead>
  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.id %></td>
        <td><a href="/directors/<%= director.id %>"><%= director.first_name %> <%= director.last_name %></a></td>
        <td><%= director.dob %></td>
        <td><%= director.nationality %></td>
        <td>
          <%= director.movies %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
